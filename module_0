import numpy as np

def game_core_v2(number):
    '''Сначала устанавливаем любое random число, а потом уменьшаем или увеличиваем его в зависимости от того, больше оно или меньше нужного.
       Функция принимает загаданное число и возвращает число попыток'''
    count = 1
    predict = np.random.randint(1,101)
    while number != predict:
        count+=1
        if number % 2 == 0 and number > predict: # если число четное и больше искомого, то смотрим четные числа в большую сторону
            predict += 2
        elif number % 2 == 0 and number < predict: # если число четное и меньше искомого, то смотрим четные числа в меньшую сторону
            predict -=2
        elif number > predict and number % 2 != 0: # если число нечетное и больше искомого, то прибавляем по единице
            predict += 1
        elif number % 2 != 0 and number > 4: # если число нечетное и меньше искомого, то смотрим нечетные числа с шагом 3 в меньшую сторону
            predict -= 3
        elif number < predict: # если число меньши искомого, то прибавляем единицу
            predict -= 1
    return(count) # выход из цикла, если угадали
